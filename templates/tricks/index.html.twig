{% extends 'base.html.twig' %}
{% block content1 %}
            
        
<h2>Toutes les figures</h2>
    <div class="main">
      <div class="shop_top">
        <div class="container">
            <div class="row ex_box">
            <h3 class="m_2" id="ancre"></h3> 
            {% for trick in tricks %}
                
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 team1">
                <div class="img_section_magnifier2">
                  <a class="fancybox" href="{{ asset('images/'~trick.image) }}" data-fancybox-group="gallery" title="Lorem ipsum dolor sit amet"><img src="{{ asset('images/'~trick.image) }}" class="img-responsive" alt=""></a><span> </span>
                    <div class="img_section_txt"> 
                        
                        <button><a href="{{ path('tricks_show', {'id': trick.id}) }}" >{{trick.name}}</a></button>
                        <div>
                            {% if is_granted('ROLE_USER') and trick.auteur|length > 0 %}

                                {% if  trick.auteur[0] and app.user == trick.auteur[0] %}
                            <button><a href="{{ path('tricks_delete', {'id': trick.id}) }}" data-method="DELETE" data-confirm="etes vous sur" >supprimer</a></button> 
                                {% endif %}
                            {% endif %}
                        </div>
                        
                    </div>
                </div>
                </div>
                
            {% endfor %}
            </div>
     
        </div>
     </div>
    </div>
    <div class="features">
        <div class="container0">
